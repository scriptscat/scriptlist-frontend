{
  "name": "scriptlist-frontend",
  "private": true,
  "description": "",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf ./public/build",
    "build:monaco": "cp -r ./node_modules/monaco-editor/min ./public/assets/monaco-editor",
    "build": "npm run build:monaco && npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css && npm run light-css && npm run dark-css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "remix-serve build",
    "light-css": "./node_modules/less/bin/lessc --js --modify-var=\"ant-prefix=light\"  styles/light.less app/styles/light.css",
    "dark-css": "./node_modules/less/bin/lessc --js --modify-var=\"ant-prefix=dark\" styles/dark.less app/styles/dark.css"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@ant-design/plots": "^1.2.4",
    "@antv/g-base": "0.5.11",
    "@remix-run/node": "^1.16.1",
    "@remix-run/react": "^1.16.1",
    "@remix-run/serve": "^1.16.1",
    "@toast-ui/editor": "^3.1.7",
    "@toast-ui/editor-plugin-code-syntax-highlight": "^3.0.0",
    "@types/ua-parser-js": "^0.7.36",
    "antd": "^4.24.6",
    "axios": "^0.27.2",
    "clipboard": "^2.0.11",
    "date-fns": "^2.28.0",
    "github-markdown-css": "^5.1.0",
    "marked": "^4.0.16",
    "monaco-editor": "^0.34.0",
    "prismjs": "^1.27.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-infinite-scroll-component": "^6.1.0",
    "remix-utils": "^3.2.0",
    "ua-parser-js": "^1.0.33",
    "xss": "^1.0.13"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.16.1",
    "@remix-run/eslint-config": "^1.16.1",
    "@types/marked": "^4.0.3",
    "@types/prismjs": "^1.16.6",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.1.0",
    "eslint": "^8.11.0",
    "less": "^4.1.2",
    "postcss": "^8.4.13",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
