{
	"compilerOptions": {
		"strictNullChecks": true,
		"module": "CommonJS",
		"target": "ES2020",
		"jsx": "react",
		"esModuleInterop": true,
		"types": ["node"],
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true
	},
	"ts-node": {
		"esm": false,
		"experimentalSpecifierResolution": "node"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx"
	]
}